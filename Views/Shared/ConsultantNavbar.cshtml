<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Consultant Portal</title>

    <script src="https://cdn.tailwindcss.com"></script>

    <script src="https://unpkg.com/lucide@latest"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
       
        .sidebar-scroll::-webkit-scrollbar {
            width: 4px;
        }

        .sidebar-scroll::-webkit-scrollbar-track {
            background: transparent;
        }

        .sidebar-scroll::-webkit-scrollbar-thumb {
            background: #475569; 
            border-radius: 20px;
        }
    </style>
</head>
<body class="bg-gray-100">

    <div class="flex h-screen bg-gray-100">
        <aside id="sidebar" class="w-72 bg-cyan-900 text-white flex-shrink-0 flex flex-col">
            <div class="flex flex-col h-full">
                <div class="flex items-center justify-center h-16 border-b border-slate-600">
                    <i data-lucide="scale" class="h-8 w-8 text-sky-400"></i>
                    <span class="ml-3 text-xl font-bold text-white">NIW Solutions</span>
                </div>

                <div class="p-4 flex flex-col items-center border-b border-slate-600">
                    <img class="h-20 w-20 rounded-full object-cover mb-2"
                         src="@(Session["ProfilePhotoPath"] != null && !string.IsNullOrEmpty(Session["ProfilePhotoPath"].ToString()) ? Url.Content(Session["ProfilePhotoPath"].ToString()) : "https://placehold.co/100x100/94A3B8/1E293B?text=" + (Session["Email"]?.ToString().Substring(0,1).ToUpper() ?? "C"))"
                         alt="User avatar">
                    <p class="font-semibold text-white">@(Session["Email"] ?? "Consultant")</p>
                    <p class="text-sm text-slate-400">Consultant</p>
                </div>

                <nav class="flex-1 px-4 py-4 overflow-y-auto sidebar-scroll">
                    <ul class="space-y-2">
                        <li>
                            <a href="@Url.Action("Dashboard", "Consultant")" class="flex items-center px-3 py-2 rounded-lg text-slate-300 hover:bg-slate-600 hover:text-white transition-colors">
                                <i data-lucide="layout-dashboard" class="w-5 h-5 mr-3"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("MyTasks", "Consultant")" class="flex items-center px-3 py-2 rounded-lg text-slate-300 hover:bg-slate-600 hover:text-white transition-colors">
                                <i data-lucide="clipboard-list" class="w-5 h-5 mr-3"></i>
                                <span>My Tasks</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("MyClients", "Consultant")" class="flex items-center px-3 py-2 rounded-lg text-slate-300 hover:bg-slate-600 hover:text-white transition-colors">
                                <i data-lucide="users" class="w-5 h-5 mr-3"></i>
                                <span>My Clients</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("MyClients", "Consultant")" class="flex items-center px-3 py-2 rounded-lg text-slate-300 hover:bg-slate-600 hover:text-white transition-colors">
                                <i data-lucide="users" class="w-5 h-5 mr-3"></i>
                                <span>Department List</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("LeaveRequests", "Consultant")" class="flex items-center px-3 py-2 rounded-lg text-slate-300 hover:bg-slate-600 hover:text-white transition-colors">
                                <i data-lucide="calendar-off" class="w-5 h-5 mr-3"></i>
                                <span>Request Leave</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Evaluations", "Consultant")" class="flex items-center px-3 py-2 rounded-lg text-slate-300 hover:bg-slate-600 hover:text-white transition-colors">
                                <i data-lucide="award" class="w-5 h-5 mr-3"></i>
                                <span>My Evaluations</span>
                            </a>
                        </li>
                    </ul>
                </nav>

                <div class="p-4 border-t border-slate-600">
                    <a href="@Url.Action("Logout", "Login")" class="flex items-center w-full px-3 py-2 rounded-lg text-slate-300 hover:bg-red-600 hover:text-white transition-colors">
                        <i data-lucide="log-out" class="w-5 h-5 mr-3"></i>
                        <span>Logout</span>
                    </a>
                </div>
            </div>
        </aside>

        <div class="flex-1 flex flex-col overflow-hidden">
            <header class="bg-white shadow-sm flex justify-end items-center p-4">
                <div class="flex items-center space-x-4">
                    <button class="text-gray-500 hover:text-gray-700">
                        <i data-lucide="bell" class="w-6 h-6"></i>
                    </button>
                    <button class="text-gray-500 hover:text-gray-700">
                        <i data-lucide="settings" class="w-6 h-6"></i>
                    </button>
                </div>
            </header>

            <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-100 p-6">
                @RenderBody()
            </main>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script>
        lucide.createIcons();
    </script>
    @RenderSection("scripts", required: false)

</body>
</html>