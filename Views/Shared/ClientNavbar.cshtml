<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: white;
            color: #1c1f1c;
        }

        .sidebar-scroll::-webkit-scrollbar {
            width: 4px;
        }

        .sidebar-scroll::-webkit-scrollbar-thumb {
            background: #4a5568;
            border-radius: 20px;
        }
    </style>
</head>
<body class="bg-white">
    <div class="flex h-screen">
       
        <aside class="w-64 bg-sky-600 text-white flex-shrink-0 flex flex-col justify-between">
           
            <div>
                <div class="text-center p-4 mt-4">
                    <div class="text-sm text-gray-200">Welcome</div>
                    <div class="text-lg font-semibold">@ViewBag.ClientName 🖐🏻</div>
                </div>
                <nav class="px-4 py-2 sidebar-scroll mt-6">
                    <ul class="space-y-3">
                        <li><a href="@Url.Action("Dashboard", "Client")" class="text-sm flex items-center space-x-3 text-white hover:bg-sky-500 px-3 py-2 rounded-md"><i class="bi bi-house-door"></i><span>Home</span></a></li>
                        <li><a href="@Url.Action("Forms", "Client")" class="text-sm flex items-center space-x-3 text-white hover:bg-sky-500 px-3 py-2 rounded-md"><i class="bi bi-ui-checks"></i><span>Forms</span></a></li>
                        <li><a href="@Url.Action("Documents", "Client")" class="text-sm flex items-center space-x-3 text-white hover:bg-sky-500 px-3 py-2 rounded-md"><i class="bi bi-folder"></i><span>Documents</span></a></li>
                        <li><a href="@Url.Action("Billing", "Client")" class="text-sm flex items-center space-x-3 text-white hover:bg-sky-500 px-3 py-2 rounded-md"><i class="bi bi-wallet2"></i><span>Billing</span></a></li>
                    </ul>
                </nav>
            </div>

           
            <div class="p-4">
                <ul class="space-y-3">
                    <li><a href="@Url.Action("Settings", "Client")" class="text-sm flex items-center space-x-3 text-white hover:bg-sky-500 px-3 py-2 rounded-md"><i class="bi bi-gear"></i><span>Settings</span></a></li>
                    <li><a href="@Url.Action("Logout", "Login")" class="text-sm flex items-center space-x-3 text-white hover:bg-red-600 px-3 py-2 rounded-md"><i class="bi bi-box-arrow-right"></i><span>Logout</span></a></li>
                </ul>
            </div>
        </aside>

       
        <div class="flex-1 flex flex-col overflow-hidden">
            @RenderBody()
        </div>
    </div>

    <script>
        lucide.createIcons();
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>