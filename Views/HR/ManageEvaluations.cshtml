@model IEnumerable<Law_Firm_EMS.Models.Evaluation>
@{
    ViewBag.Title = "ManageEvaluations";
    Layout = "~/Views/Shared/HRnavbar.cshtml";
}

<div class="bg-white p-6 rounded-lg shadow-md">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">Consultant Evaluations</h1>
            <p class="text-gray-500">Review and create performance assessments.</p>
        </div>
        <a href="@Url.Action("CreateEvaluation", "HR")" class="bg-sky-500 text-white px-4 py-2 rounded-lg hover:bg-sky-600 transition-colors flex items-center">
            <i data-lucide="plus" class="h-5 w-5 mr-2"></i>
            <span>New Evaluation</span>
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6" role="alert">
            <p class="font-bold">Success</p>
            <p>@TempData["SuccessMessage"]</p>
        </div>
    }

    <div class="space-y-4">
        @foreach (var item in Model)
        {
            <div class="border rounded-lg p-4">
                <div class="flex justify-between items-start">
                    <div>
                        <h3 class="text-lg font-bold text-gray-800">@item.Title</h3>
                        <p class="text-sm text-gray-500">
                            For: <span class="font-medium text-gray-700">@item.Consultant.Name</span> |
                            By: <span class="font-medium text-gray-700">@item.EvaluatedByHR.Name</span> on
                            <span class="font-medium text-gray-700">@item.DateGiven.ToString("MMMM dd, yyyy")</span>
                        </p>
                    </div>
                    <a href="#" class="text-indigo-600 hover:text-indigo-900 text-sm">View Details</a>
                </div>
                <div class="mt-3 pt-3 border-t">
                    <p class="text-gray-600 whitespace-pre-wrap">@item.Details</p>
                </div>
            </div>
        }
    </div>
</div>
