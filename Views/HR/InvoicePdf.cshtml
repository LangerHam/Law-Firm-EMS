@model Law_Firm_EMS.ViewModels.HR.InvoiceViewModel
@{
    Layout = null;
}

<h2>InvoicePdf</h2>

<!DOCTYPE html>
<html>
<head>
    <title>Monthly Invoice</title>
    <style>
        body {
            font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
            color: #333;
        }

        .invoice-box {
            max-width: 800px;
            margin: auto;
            padding: 30px;
            border: 1px solid #eee;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
            font-size: 16px;
            line-height: 24px;
        }

            .invoice-box table {
                width: 100%;
                line-height: inherit;
                text-align: left;
                border-collapse: collapse;
            }

                .invoice-box table td {
                    padding: 5px;
                    vertical-align: top;
                }

                .invoice-box table tr.top table td {
                    padding-bottom: 20px;
                }

                    .invoice-box table tr.top table td.title {
                        font-size: 45px;
                        line-height: 45px;
                        color: #333;
                    }

                .invoice-box table tr.information table td {
                    padding-bottom: 40px;
                }

                .invoice-box table tr.heading td {
                    background: #eee;
                    border-bottom: 1px solid #ddd;
                    font-weight: bold;
                }

                .invoice-box table tr.item td {
                    border-bottom: 1px solid #eee;
                }

                .invoice-box table tr.item.last td {
                    border-bottom: none;
                }

                .invoice-box table tr.total td {
                    border-top: 2px solid #eee;
                    font-weight: bold;
                }

        .text-right {
            text-align: right;
        }

        .logo {
            width: 100%;
            max-width: 150px;
        }

        .footer {
            font-size: 12px;
            text-align: center;
            color: #777;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <div class="invoice-box">
        <table>
            <tr class="top">
                <td colspan="2">
                    <table>
                        <tr>
                            <td class="title">
                                <img src="@ViewBag.LogoUrl" alt="Company logo" class="logo" />
                            </td>
                            <td class="text-right">
                                <strong>Monthly Financial Report</strong><br />
                                Date: @Model.ReportMonth.ToString("MMMM dd, yyyy")<br />
                                Report Month: @Model.ReportMonth.ToString("MMMM yyyy")
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

            <tr class="information">
                <td colspan="2">
                    <table>
                        <tr>
                            <td>
                                NIW Solutions LLC<br />
                                123 Legal Plaza<br />
                                New York, NY 10001
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

            <tr class="heading">
                <td>Summary Item</td>
                <td class="text-right">Amount (Taka)</td>
            </tr>
            <tr class="item">
                <td>Total Income</td>
                <td class="text-right">৳ @Model.TotalIncome.ToString("N2")</td>
            </tr>
            <tr class="item">
                <td>Total Expenses</td>
                <td class="text-right">- ৳ @Model.TotalExpenses.ToString("N2")</td>
            </tr>
            <tr class="total">
                <td>Net @(Model.Profit >= 0 ? "Profit" : "Loss")</td>
                <td class="text-right">৳ @Model.Profit.ToString("N2")</td>
            </tr>

            <tr class="heading" style="margin-top: 30px;">
                <td>Expense Breakdown</td>
                <td></td>
            </tr>
            <tr class="item">
                <td>Consultant Salaries (@Model.ConsultantCount consultants)</td>
                <td class="text-right">- ৳ @Model.ConsultantSalaries.ToString("N2")</td>
            </tr>
            <tr class="item last">
                <td>Miscellaneous Office Expenses (10%)</td>
                <td class="text-right">- ৳ @Model.MiscExpenses.ToString("N2")</td>
            </tr>
        </table>
        <div class="footer">
            Generated by: @ViewBag.GeneratedBy on @DateTime.UtcNow.ToString("yyyy-MM-dd HH:mm") UTC
        </div>
    </div>
</body>
</html>