@model Law_Firm_EMS.ViewModels.ConsultantViewModel
@{
    ViewBag.Title = "CreateConsultant";
    Layout = "~/Views/Shared/HRnavbar.cshtml";
}

<div class="bg-white p-8 rounded-lg shadow-md max-w-2xl mx-auto">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Add New Consultant</h2>

    @using (Html.BeginForm("CreateConsultant", "HR", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="space-y-6">
            @Html.ValidationSummary(true, "", new { @class = "text-red-600 bg-red-50 p-3 rounded-md" })

            <div>
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-red-600 text-xs mt-1" })
            </div>

            <div>
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-red-600 text-xs mt-1" })
            </div>

            <div>
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-red-600 text-xs mt-1" })
            </div>

            <div>
                @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg" } })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-red-600 text-xs mt-1" })
            </div>

            <div class="flex items-center justify-end space-x-4 pt-4">
                <a href="@Url.Action("ManageConsultants", "HR")" class="bg-gray-200 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-300">Cancel</a>
                <input type="submit" value="Create Consultant" class="bg-sky-500 text-white px-4 py-2 rounded-lg hover:bg-sky-600 cursor-pointer" />
            </div>
        </div>
    }
</div>

